---
export interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<h1 class="font">タグ</h1>
<div class="tag">
  <a class="font" href={tag}>{tag}</a>
  <a class="font" href={tag}>{tag}</a>
  <a class="font" href={tag}>{tag}</a>
</div>

<style>
  .font {
    font-family: "Hiragino Kaku Gothic ProN";
    font-style: normal;
    font-weight: 300;
    font-size: 14px;
    line-height: 150%;
    display: flex;
    align-items: center;
    letter-spacing: -0.0024em;
  }
  a {
    margin: 0;
    color: #02af86;
    text-decoration: none;
  }
  h1 {
    font-weight: 600 !important;
    padding: 16px 16px 12px;
    margin: 0;
  }
  .tag {
    display: flex;
    box-sizing: border-box;
    padding: 10px 16px;
    height: 41px;
    gap: 2px;
  }
</style>
